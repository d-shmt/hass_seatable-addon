# /seatable/Dockerfile

# Nutzt das offizielle Home Assistant Basis-Image
ARG BUILD_FROM
FROM $BUILD_FROM

# Installiert alle notwendigen Pakete in einer Zeile
# wget: zum Herunterladen
# tar: zum Entpacken
# sed: zum Bearbeiten von Textdateien (f端r die Port-Anpassung)
# docker-cli & docker-compose: um SeaTable zu starten
# iproute2: f端r die alternative IP-Ermittlung
RUN apk add --no-cache wget tar sed docker-cli docker-compose iproute2

# Kopiert das Start-Skript in das Image und macht es ausf端hrbar
COPY run.sh /
RUN chmod a+x /run.sh

# Definiert das Kommando, das beim Start des Containers ausgef端hrt wird
CMD [ "/run.sh" ]
